@page
@model SistemaBusqueda2.Pages.NuevoPais_Model
@{
}
div class="container">
<h3>Nuevo Pais</h3>
<hr />
<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="Nombrepais"></label>
                <input asp-for="Nombrepais" class="form-control" type="text" />
                <span asp-validation-for="Nombrepais" class="text-danger"></span>
            </div>
            
            
            <a asp-page="Paises" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <div asp-validation-summary="All" class="text-danger mt-4"></div>
        </form>
    </div>

</div>

